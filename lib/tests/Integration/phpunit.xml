<?xml version="1.0" encoding="UTF-8"?>
<phpunit
        bootstrap="bootstrap.php"
        colors="true"
        verbose="true"
        testdox="true"
>
    <testsuites>
        <testsuite name="Integration">
            <directory>.</directory>
        </testsuite>
    </testsuites>

    <coverage processUncoveredFiles="true">
        <include>
            <directory suffix=".php">../../</directory>
        </include>
        <exclude>
            <directory>../../tests</directory>
        </exclude>
    </coverage>
</phpunit>