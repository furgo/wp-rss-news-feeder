{
    "name": "furgo/rss-news-feeder",
    "description": "RSS Feed Aggregation System with WordPress Backend and JavaScript Frontend",
    "type": "wordpress-plugin",
    "license": "GPL-2.0-or-later",
    "authors": [
        {
            "name": "Axel W\u00fcstemann",
            "homepage": "wuestemann.me"
        }
    ],
    "minimum-stability": "stable",
    "require": {
        "php": ">=8.1",
        "php-di/php-di": "^7.0",
        "psr/container": "^2.0",
        "psr/log": "^3.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.0",
        "phpstan/phpstan": "^1.10",
        "squizlabs/php_codesniffer": "^3.8",
        "php-stubs/wordpress-stubs": "^6.4",
        "dealerdirect/phpcodesniffer-composer-installer": "^1.1",
        "phpcsstandards/phpcsextra": "^1.4",
        "phpcsstandards/phpcsutils": "^1.1",
        "szepeviktor/phpstan-wordpress": "^1.3",
        "wp-coding-standards/wpcs": "^3.0"
    },
    "autoload": {
        "psr-4": {
            "Furgo\\Sitechips\\Core\\": "lib/",
            "Furgo\\RssNewsFeeder\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Furgo\\Sitechips\\Core\\Tests\\": "tests/",
            "Furgo\\RssNewsFeeder\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "vendor/bin/phpunit --testsuite=Framework",
        "test:plugin": "vendor/bin/phpunit --testsuite=Plugin",
        "test:core": "vendor/bin/phpunit --testsuite=Core",
        "test:framework": "vendor/bin/phpunit --testsuite=Framework",
        "test:all": "vendor/bin/phpunit --testsuite=All",
        "test:coverage": "vendor/bin/phpunit --testsuite=Framework --coverage-html coverage/",
        "test:coverage-all": "vendor/bin/phpunit --testsuite=All --coverage-html coverage/",
        "phpcs": "vendor/bin/phpcs",
        "phpstan": "vendor/bin/phpstan analyse",
        "quality": [
            "@phpcs",
            "@phpstan",
            "@test"
        ],
        "quality:plugin": [
            "@phpcs",
            "@phpstan",
            "@test:plugin"
        ]
    },
    "config": {
        "allow-plugins": {
            "dealerdirect/phpcodesniffer-composer-installer": true
        }
    }
}